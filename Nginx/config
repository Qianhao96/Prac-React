# this is config for Nginx acting as a reverse proxy for jenkins and web server


# see this page for config ssl
# https://gist.github.com/pedrouid/4abcc16c0218a46a577cfa8186cb845d


upstream jenkins {
  keepalive 32; # keepalive connections
  server 192.168.20.151:8080; # jenkins ip and port
}

# Required for Jenkins websocket agents
map $http_upgrade $connection_upgrade {
  default upgrade;
  '' close;
}

server {
    listen 80;
    server_name coolguydeploy.tk;
    return 301 https://$host$request_uri;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name     coolguydeploy.tk;  # replace 'jenkins.example.com' with your server domain name

  ssl_certificate /etc/letsencrypt/live/coolguydeploy.tk/fullchain.pem; # REPLACE HERE
  ssl_certificate_key /etc/letsencrypt/live/coolguydeploy.tk/privkey.pem; # REPLACE HERE

  # Paste the following from https://cipherli.st/ (follow the link for more info)
  ssl_protocols TLSv1.3 TLSv1.2 TLSv1.1 TLSv1;
  ssl_prefer_server_ciphers on;
  ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384;
  ssl_ecdh_curve secp384r1; # Requires nginx >= 1.1.0
  ssl_session_timeout  10m;
  ssl_session_cache shared:SSL:10m;
  ssl_session_tickets off; # Requires nginx >= 1.5.9
  ssl_stapling on; # Requires nginx >= 1.3.7
  ssl_stapling_verify on; # Requires nginx => 1.3.7
  resolver 208.67.222.222 208.67.220.220 valid=300s;
  resolver_timeout 5s;
  add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload";
  # add_header X-Frame-Options DENY;
  add_header X-Content-Type-Options nosniff;
  add_header X-XSS-Protection "1; mode=block";

  # this is the jenkins web root directory
  # (mentioned in the output of "systemctl cat jenkins")
  root            /var/run/jenkins/war/;

  access_log      /var/log/nginx/jenkins.access.log;
  error_log       /var/log/nginx/jenkins.error.log;

  # pass through headers from Jenkins that Nginx considers invalid
  ignore_invalid_headers off;

  proxy_intercept_errors on;

  location ~ "^/static/[0-9a-fA-F]{8}\/(.*)$" {
    # rewrite all static files into requests to the root
    # E.g /static/12345678/css/something.css will become /css/something.css
    rewrite "^/static/[0-9a-fA-F]{8}\/(.*)" /$1 last;
  }

  location /userContent {
    # have nginx handle all the static requests to userContent folder
    # note : This is the $JENKINS_HOME dir
    root /var/lib/jenkins/;
    if (!-f $request_filename){
      # this file does not exist, might be a directory or a /**view** url
      rewrite (.*) /$1 last;
      break;
    }
    sendfile on;
  }

  location / {
      sendfile off;
      proxy_pass         http://jenkins;
      proxy_redirect     default;
      proxy_http_version 1.1;

      error_page 404  /notfoundpage;


      # Required for Jenkins websocket agents
      proxy_set_header   Connection        $connection_upgrade;
      proxy_set_header   Upgrade           $http_upgrade;

      proxy_set_header   Host              $host;
      proxy_set_header   X-Real-IP         $remote_addr;
      proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
      proxy_set_header   X-Forwarded-Proto $scheme;
      proxy_max_temp_file_size 0;

      #this is the maximum upload size
      client_max_body_size       10m;
      client_body_buffer_size    128k;

      proxy_connect_timeout      90;
      proxy_send_timeout         90;
      proxy_read_timeout         90;
      proxy_buffering            off;
      proxy_request_buffering    off; # Required for HTTP CLI commands
      proxy_set_header Connection ""; # Clear for keepalive

      proxy_set_header X-NginX-Proxy true;
      proxy_pass_header Server;
      proxy_ssl_session_reuse off;
      proxy_cache_bypass $http_upgrade;
  }

      location = /notfoundpage {
            root    html;
            allow   all;
            index   example.com.404.html;
            rewrite ^ $scheme://coolguydeploy.tk permanent;
      }


}

server {
    listen 80;
    server_name coolguy.tk;
    return 301 https://$host$request_uri;
}

server {
      listen 443 ssl http2;
      listen [::]:443 ssl http2;

      server_name coolguy.tk;
      proxy_intercept_errors on;
      
      ssl_certificate /etc/letsencrypt/live/coolguy.tk/fullchain.pem; # REPLACE HERE
      ssl_certificate_key /etc/letsencrypt/live/coolguy.tk/privkey.pem; # REPLACE HERE

      # Paste the following from https://cipherli.st/ (follow the link for more info)
      ssl_protocols TLSv1.3 TLSv1.2 TLSv1.1 TLSv1;
      ssl_prefer_server_ciphers on;
      ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384;
      ssl_ecdh_curve secp384r1; # Requires nginx >= 1.1.0
      ssl_session_timeout  10m;
      ssl_session_cache shared:SSL:10m;
      ssl_session_tickets off; # Requires nginx >= 1.5.9
      ssl_stapling on; # Requires nginx >= 1.3.7
      ssl_stapling_verify on; # Requires nginx => 1.3.7
      resolver 208.67.222.222 208.67.220.220 valid=300s;
      resolver_timeout 5s;
      add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload";
      # add_header X-Frame-Options DENY;
      add_header X-Content-Type-Options nosniff;
      add_header X-XSS-Protection "1; mode=block";


      # Paste this at the bottom of the file
      ssl_dhparam /etc/ssl/certs/dhparam.pem;

      location / {
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-NginX-Proxy true;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_pass http://192.168.20.152;
            proxy_ssl_session_reuse off;
            proxy_set_header Host $http_host;
            proxy_pass_header Server;
            proxy_cache_bypass $http_upgrade;
            proxy_redirect off;
            error_page 404  /notfoundpage;
      }

      location = /notfoundpage {
            root    html;
            allow   all;
            index   example.com.404.html;
            rewrite ^ $scheme://coolguy.tk permanent;
      }
}

